<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/covoiturage_light_gray_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Empty State (shown when no ride) -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_icon_circle_gray"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš—"
                    android:textSize="40sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Ride Offers Yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You haven't created any ride offers. Create your first ride to start carpooling!"
                android:textSize="14sp"
                android:textColor="@color/covoiturage_dark_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnCreateRide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a Ride"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_red"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- Active Ride Content -->
        <LinearLayout
            android:id="@+id/activeRideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Ride Offer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Ride Overview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Route -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="12dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_departure_circle" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="24dp"
                                android:background="@color/covoiturage_dark_gray"
                                android:layout_marginVertical="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMyRideDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Esprit Campus"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="28dp" />

                            <TextView
                                android:id="@+id/tvMyRideDestination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tunis Centre"
                                android:textSize="14sp"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Date, Time, Vehicle, Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“…"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvMyRideDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2025-11-03"
                            android:textSize="12sp"
                            android:textColor="@color/covoiturage_dark_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvMyRideTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:30"
                            android:textSize="12sp"
                            android:textColor="@color/covoiturage_dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš—"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvMyRideVehicle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Peugeot 208"
                            android:textSize="12sp"
                            android:textColor="@color/covoiturage_dark_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’µ"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvMyRidePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5 TND"
                            android:textSize="12sp"
                            android:textColor="@color/covoiturage_dark_gray" />
                    </LinearLayout>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Notes"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMyRideNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pick up at main entrance"
                        android:textSize="12sp"
                        android:textColor="@color/covoiturage_dark_gray" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnModifyRide"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Modify Ride"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/covoiturage_red_primary"
                            android:background="@drawable/bg_button_outline_red"
                            android:padding="12dp"  />

                        <Button
                            android:id="@+id/btnDeleteRide"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delete Ride"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_button_red"
                            android:padding="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Seats Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Seats Status"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvSeatsStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2/4 available"
                            android:textSize="14sp"
                            android:textColor="@color/covoiturage_dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/seatsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:minHeight="60dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Passenger Bookings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBookingsTitle"
                android:text="Passenger Bookings (2)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

