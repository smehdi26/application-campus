<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- NEW indicator (dot) -->
        <View
            android:id="@+id/viewNewIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_badge_red"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pin icon -->
        <ImageView
            android:id="@+id/ivPinIndicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="6dp"
            android:src="@android:drawable/ic_menu_add"
            android:visibility="gone"
            app:tint="@color/esprit_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewNewIndicator" />

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutAvatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F4F6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvAvatarInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/esprit_red"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Favorite button (top right, clean) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/favCard"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="17dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F4F6"
            app:layout_constraintTop_toTopOf="@id/layoutAvatar"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@android:drawable/btn_star_big_off"
                android:contentDescription="@string/add_to_favorites"
                android:scaleType="centerInside"
                app:tint="@color/esprit_red" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Title + pinned badge row -->
        <LinearLayout
            android:id="@+id/titleRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/layoutAvatar"
            app:layout_constraintTop_toTopOf="@id/layoutAvatar"
            app:layout_constraintEnd_toStartOf="@id/favCard">

            <TextView
                android:id="@+id/tvPostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Post Title"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#111827"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvPinnedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/pinned"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/bg_pill_red"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Author -->
        <TextView
            android:id="@+id/tvPostAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Author Name"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/layoutAvatar"
            app:layout_constraintTop_toBottomOf="@id/titleRow"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subject tag (pill) -->
        <TextView
            android:id="@+id/tvSubjectTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Subject"
            android:textSize="11sp"
            android:textColor="#374151"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_pill_gray"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/layoutAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvPostAuthor" />

        <!-- Content -->
        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Content..."
            android:textSize="13sp"
            android:textColor="#4B5563"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@id/tvSubjectTag"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectTag"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Meta row -->
        <LinearLayout
            android:id="@+id/metaRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/tvSubjectTag"
            app:layout_constraintTop_toBottomOf="@id/tvPostContent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 replies"
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="0 views"
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvLastReply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Just now"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:gravity="end" />
        </LinearLayout>

        <!-- Emoji Reactions -->
        <LinearLayout
            android:id="@+id/emojiReactionsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            app:layout_constraintStart_toStartOf="@id/metaRow"
            app:layout_constraintTop_toBottomOf="@id/metaRow"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnAddReaction"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="ðŸ˜Š React"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:backgroundTint="#F3F4F6"
                android:textColor="#111827" />

            <LinearLayout
                android:id="@+id/userReactionsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
