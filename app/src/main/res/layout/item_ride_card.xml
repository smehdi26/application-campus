<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Driver Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Avatar -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_avatar_red"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tvDriverInitial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/covoiturage_red_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Driver Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmed Ben Salem"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDriverRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 4.8"
                        android:textSize="12sp"
                        android:textColor="@color/covoiturage_dark_gray"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvDriverTrips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 trips"
                        android:textSize="12sp"
                        android:textColor="@color/covoiturage_dark_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Price Badge -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 TND"
                android:textSize="14sp"
                android:textColor="@color/covoiturage_red_primary"
                android:background="@drawable/bg_price_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

        <!-- Route Visualization -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp">

                <!-- Departure Circle -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_departure_circle" />

                <!-- Connecting Line -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:background="@color/covoiturage_dark_gray"
                    android:layout_marginVertical="4dp" />

                <!-- Destination Pin -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDeparture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esprit Campus"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tunis Centre"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“…"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-11-03"
                    android:textSize="12sp"
                    android:textColor="@color/covoiturage_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textSize="12sp"
                    android:textColor="@color/covoiturage_dark_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 seats"
                    android:textSize="12sp"
                    android:textColor="@color/covoiturage_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš—"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peugeot 208"
                    android:textSize="12sp"
                    android:textColor="@color/covoiturage_dark_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Book Button -->
        <Button
            android:id="@+id/btnBookRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book This Ride"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_red"
        android:padding="14dp" />

    <!-- Admin Delete Button (visible only for admin role) -->
    <Button
        android:id="@+id/btnDeleteRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete Ride"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/covoiturage_dark_gray"
        android:padding="12dp"
        android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

