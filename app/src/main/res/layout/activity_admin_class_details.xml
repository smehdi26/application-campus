<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- 1. HEADER WITH BACK BUTTON -->
    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:rotation="180"
            app:tint="#333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvHeaderClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Courses"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 2. EDIT CLASS INFO BUTTON (NEW) -->
    <Button
        android:id="@+id/btnManageClassInfo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Edit Class Info &amp; Students"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:drawableTint="#FFFFFF"
        android:paddingStart="20dp"
        android:gravity="center_vertical|start"/>

    <!-- 3. COURSE LIST -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses in this Class"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAdminCourses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:clipToPadding="false"/>

    <!-- 4. ADD COURSE BUTTON -->
    <Button
        android:id="@+id/btnAdminAddCourse"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add New Course"
        android:backgroundTint="@color/esprit_red"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

</LinearLayout>