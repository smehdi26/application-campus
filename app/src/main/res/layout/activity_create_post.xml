<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA">

    <!-- HEADER (modern card) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_icon_button"
                android:padding="10dp"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="@string/back"
                app:tint="#111827"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/create_post"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnPublish" />

            <Button
                android:id="@+id/btnPublish"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="@string/publish"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                app:backgroundTint="@color/esprit_red"
                app:cornerRadius="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintBottom_toBottomOf="@id/btnBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- FORM -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="18dp">

            <!-- SECTION: Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="@string/post_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/etPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_title"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:textSize="15sp"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:singleLine="true"
                    android:inputType="textCapSentences" />
            </androidx.cardview.widget.CardView>

            <!-- SECTION: Subject -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/subject"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerSubject"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@android:color/transparent" />
            </androidx.cardview.widget.CardView>

            <!-- SECTION: Content -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/post_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/rtPostContent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="@string/enter_content"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical" />
            </androidx.cardview.widget.CardView>

            <!-- Post Type (Teachers/Admins) -->
            <LinearLayout
                android:id="@+id/layoutPostType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/post_type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerPostType"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:background="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Attachment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:text="@string/attachment_optional"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="6dp"
                android:text="Lien Drive / URL (optionnel)"
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/etAttachmentUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_drive_link"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:inputType="textUri"
                    android:singleLine="true" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/etAttachmentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/attachment_name_optional"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:singleLine="true" />
            </androidx.cardview.widget.CardView>

            <!-- Moderation info -->
            <TextView
                android:id="@+id/tvModerationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:padding="12dp"
                android:text="@string/moderation_info"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:background="@drawable/bg_info_box"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
