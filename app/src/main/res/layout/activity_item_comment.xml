<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:id="@+id/layoutComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Checkmark for Official Answer -->
            <ImageView
                android:id="@+id/ivOfficialCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/checkbox_on_background"
                app:tint="#4CAF50"
                android:visibility="gone"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvCommentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment content here..."
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_toEndOf="@id/ivOfficialCheck"
                android:layout_toStartOf="@+id/btnDeleteComment"/>

            <ImageView
                android:id="@+id/btnDeleteComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:contentDescription="Delete comment"
                app:tint="@color/esprit_red"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCommentAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Author (Role)"
                android:textSize="11sp"
                android:textColor="#757575"/>

            <!-- Badge for Official Answer -->
            <TextView
                android:id="@+id/tvOfficialBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RÃ‰PONSE OFFICIELLE"
                android:textColor="#4CAF50"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnReplyComment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_revert"
                android:rotation="180"
                android:padding="2dp"
                android:contentDescription="Reply to comment"
                app:tint="#757575"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvCommentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2024"
                android:textSize="11sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Emoji Reactions & Mark as Official -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            
            <Button
                android:id="@+id/commentBtnAddReaction"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="ðŸ˜Š React"
                android:textSize="10sp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:backgroundTint="#E0E0E0"/>

            <LinearLayout
                android:id="@+id/commentUserReactionsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/btnMarkOfficial"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="âœ“ OFFICIEL"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
