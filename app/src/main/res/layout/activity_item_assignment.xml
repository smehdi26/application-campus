<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="2dp">

    <LinearLayout
        android:id="@+id/itemAssignmentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <!-- HEADER ROW: Title, Date, Status, Admin Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left Side: Assignment Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAssignTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="#555"/>
                    <TextView
                        android:id="@+id/tvAssignDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due: 2026-01-01 12:00"
                        android:textSize="12sp"
                        android:textColor="#555"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Right Side: Status Badge (For Student) -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="11sp"
                android:textColor="#555"
                android:background="@drawable/bg_badge_gray"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp"/>

            <!-- ADMIN/TEACHER BUTTONS CONTAINER -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp">

                <!-- Edit Button -->
                <ImageView
                    android:id="@+id/btnEditAssign"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#2196F3"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Delete Button -->
                <ImageView
                    android:id="@+id/btnDeleteAssign"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#D32F2F"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>

        <!-- STUDENT ACTION AREA -->

        <!-- 1. Submit Button (Visible if Pending) -->
        <Button
            android:id="@+id/btnSubmitAssignment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Submit Assignment"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:drawableStart="@android:drawable/stat_sys_upload"
            android:drawableTint="#FFF"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="gone"/>

        <!-- 2. Submission Details (Visible if Submitted) -->
        <LinearLayout
            android:id="@+id/layoutSubmissionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFEBEE"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Work:"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#333"/>

                <!-- CLICKABLE LINK -->
                <TextView
                    android:id="@+id/tvStudentLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Link"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/tvSubmissionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2026-01-01 14:00"
                    android:textSize="10sp"
                    android:textColor="#757575"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade"
                    android:textSize="10sp"
                    android:textColor="#555"/>
                <TextView
                    android:id="@+id/tvGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>