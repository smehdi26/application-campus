<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootForum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:fitsSystemWindows="false">

    <!-- HEADER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Logo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoBox"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardBackgroundColor="@color/esprit_red"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="E"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tvForumTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Forum"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/layoutNotificationButton"
                app:layout_constraintStart_toEndOf="@id/logoBox"
                app:layout_constraintTop_toTopOf="@id/logoBox" />

            <TextView
                android:id="@+id/tvForumSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:text="Rechercher, filtrer et trier les posts"
                android:textColor="#6B7280"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/layoutNotificationButton"
                app:layout_constraintStart_toEndOf="@id/logoBox"
                app:layout_constraintTop_toBottomOf="@id/tvForumTitle" />

            <!-- NotificationForum Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutNotificationButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="@id/logoBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/logoBox">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnOpenNotifications"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/notifications"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_notification_bell"
                        app:tint="@color/esprit_red" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/badgeContainer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="-3dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/esprit_red"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <TextView
                            android:id="@+id/badgeNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:maxLength="2"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Search + Sort + Favorites -->
            <LinearLayout
                android:id="@+id/searchArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logoBox">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_box"
                    android:fontFamily="sans-serif"
                    android:hint="Rechercher..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:singleLine="true"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/btnShowFavorites"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sort_button"
                    android:clickable="true"
                    android:contentDescription="@string/favorites"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="@color/esprit_red" />

                <ImageView
                    android:id="@+id/btnSort"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_sort_button"
                    android:clickable="true"
                    android:contentDescription="@string/sort"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_sort"
                    app:tint="@color/esprit_red" />
            </LinearLayout>

            <!-- Chips -->
            <HorizontalScrollView
                android:id="@+id/chipsScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchArea">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSubjectFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="10dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterAll"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:minHeight="36dp"
                        android:text="@string/all_short"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterAcademic"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_academic"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterClubs"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_clubs"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterInternships"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_internships"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterLife"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_life"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterTransport"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_transport"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterExams"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_exams"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFilterHelp"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:text="@string/subject_help"
                        android:textColor="@color/chip_text_selector"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@color/chip_bg_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/emptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:text="@string/no_posts"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/paginationControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp">

                    <Button
                        android:id="@+id/btnPrevPage"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Précédent"
                        android:textColor="@color/esprit_red"
                        app:strokeColor="@color/esprit_red" />

                    <TextView
                        android:id="@+id/tvPageNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"
                        android:text="Page 1/3"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnNextPage"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suivant"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="@color/esprit_red" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Navbar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/layout_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_add"
        android:visibility="gone"
        app:backgroundTint="@color/esprit_red"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
